{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "local/api": ["src/api"],
      "local/api/*": ["src/api/*"],
      "local/app": ["src/app"],
      "local/app/*": ["src/app/*"],
      "local/repository": ["src/repository"],
      "local/repository/*": ["src/repository/*"],
      "local/domain": ["src/domain"],
      "local/domain/*": ["src/domain/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
